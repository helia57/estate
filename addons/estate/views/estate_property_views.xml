<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= -->
    <!--          SEARCH VIEW          -->
    <!-- ============================= -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

        

            <search string="Search Properties">

                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="total_area"/>

                <separator/>

                <filter name="state_new"
                        string="New"
                        domain="[('state','=','new')]"/>

                <filter name="state_offer_received"
                        string="Offer Received"
                        domain="[('state','=','offer_received')]"/>

                <filter name="state_offer_accepted"
                        string="Offer Accepted"
                        domain="[('state','=','offer_accepted')]"/>

                <filter name="available"
                        string="Available"
                        domain="[('state','not in',('sold','canceled'))]"/>


                <separator/>

                <filter name="group_postcode"
                        string="Postcode"
                        context="{'group_by':'postcode'}"/>

                <filter name="group_state"
                        string="State"
                        context="{'group_by':'state'}"/>

            </search>
        </field>
    </record>

    <!-- ============================= -->
    <!--           LIST VIEW           -->
    <!-- ============================= -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Properties"
                  decoration-success="state == 'offer_received'"
                  decoration-info="state == 'offer_accepted'"
                  decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="image_main" widget="image"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"
                    filter_domain="[('living_area','>=', self)]"/>

                <field name="total_area"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ============================= -->
    <!--           ACTION              -->
    <!-- ============================= -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="estate_property_search_view"/>
        <field name="context">
            {'search_default_available': 1}
        </field>
    </record>


    
    <!-- ============================= -->
    <!--           FORM VIEW           -->
    <!-- ============================= -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Property">

                <header>
                    <button name="action_sold"
                            string="Sold"
                            type="object"
                            class="btn-primary"
                            invisible="state in ('sold','canceled')"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"
                            invisible="state in ('sold','canceled')"/>

                    <button name="action_reset_offers"
                            type="object"
                            string="Reset Offers"
                            class="btn-warning"
                            groups="base.group_system"
                            invisible="state not in ('offer_accepted','sold')"/>


                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>
                </header>


                <sheet>

                    <!-- Title -->
                    <group>
                        <field name="name"/>
                        <field name="tag_ids"
                            widget="many2many_tags"
                            options="{
                                'no_create': True,
                                'no_open': True,
                                'color_field': 'color'
                            }"/>
                    </group>

                    
                    <!-- Main info -->
                    <group>
                        <group string="Information">
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" readonly="1"/>
                        </group>

                        <group string="Pricing">
                            <field name="expected_price" widget="monetary"/>
                            <field name="expected_selling_rate" widget="percentage"/>
                            <field name="best_price" readonly="1"/>
                            <field name="selling_price" readonly="1"/>
                        </group>
                    </group>

                    <!-- ============================= -->
                    <!--           NOTEBOOK            -->
                    <!-- ============================= -->
                    <notebook>

                        <page string="Description">
                            <field name="description"/>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids"
                                readonly="state in ('offer_accepted','sold','canceled')">
                                <list editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </list>
                            </field>

                        </page>



                    </notebook>

                    <!-- ============================= -->
                    <!--           DETAILS             -->
                    <!-- ============================= -->
                    <group string="Details">
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="total_area" readonly="1"/>
                            <field name="garage"/>
                        </group>

                        <group string="Garden">
                            <field name="garden"/>
                            <field name="garden_area" invisible="not garden"/>
                            <field name="garden_orientation" invisible="not garden"/>
                        </group>


                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban
                default_group_by="property_type_id"
                records_draggable="false"
                group_create="false"
                group_edit="false"
                group_delete="false">

                <!-- Champs charg√©s -->
                <field name="name"/>
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card">

                            <strong class="o_kanban_record_title">
                                <t t-esc="record.name.value"/>
                            </strong>

                            <div>
                                üí∞ Expected:
                                <t t-esc="record.expected_price.value"/>
                            </div>

                            <t t-if="record.state.raw_value in ['offer_received', 'offer_accepted']">
                                <div>
                                    üè∑ Best offer:
                                    <t t-esc="record.best_price.value"/>
                                </div>
                            </t>

                            <t t-if="record.state.raw_value == 'offer_accepted'">
                                <div>
                                    ‚úÖ Sold for:
                                    <t t-esc="record.selling_price.value"/>
                                </div>
                            </t>

                            <!-- ‚úÖ TAGS -->
                            <div class="mt-2">
                                <field name="tag_ids" widget="many2many_tags"/>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- =========views herit√©==================== -->
    <record id="estate_property_form_view_owl" model="ir.ui.view">
        <field name="name">estate.property.form.owl</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.view_estate_property_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/group[1]" position="inside">
                <group string="Resume OWL Widget">
                    <widget name="estate_counter"/>
                </group>
            </xpath>


        </field>
    </record>

    <record id="estate_property_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <list>
        <field name="name"/>
        <field name="expected_price"/>
        <field name="state"/>
        </list>
    </field>
    </record>

</odoo>